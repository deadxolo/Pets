rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // ============================================
    // SITE SETTINGS & CONTENT (Public Read, Admin Write)
    // ============================================

    match /site_settings/{document} {
      allow read: if true;  // Public read access
      allow write: if isAdmin();  // Admin only write
    }

    match /hero_sections/{document} {
      allow read: if true;  // Public read access
      allow write: if isAdmin();  // Admin only write
    }

    match /features/{document} {
      allow read: if true;  // Public read access
      allow write: if isAdmin();  // Admin only write
    }

    match /navigation/{document} {
      allow read: if true;  // Public read access
      allow write: if isAdmin();  // Admin only write
    }

    // ============================================
    // USERS
    // ============================================

    match /users/{userId} {
      // Users can read their own data, admins can read all
      allow read: if isOwner(userId) || isAdmin();

      // Users can create their own document
      allow create: if isAuthenticated() && request.auth.uid == userId;

      // Users can update their own data (except role field)
      allow update: if isOwner(userId) &&
                      (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['role'])) ||
                      isAdmin();

      // Only admins can delete
      allow delete: if isAdmin();
    }

    // ============================================
    // SERVICES
    // ============================================

    match /services/{serviceId} {
      allow read: if true;  // Public read access
      allow create, update, delete: if isAdmin();  // Admin only write
    }

    // ============================================
    // PRODUCTS
    // ============================================

    match /products/{productId} {
      allow read: if true;  // Public read access
      allow create, update, delete: if isAdmin();  // Admin only write
    }

    // ============================================
    // ARTICLES (Blog/Consultant)
    // ============================================

    match /articles/{articleId} {
      allow read: if true;  // Public read access
      allow create, update, delete: if isAdmin();  // Admin only write
    }

    // ============================================
    // ORDERS
    // ============================================

    match /orders/{orderId} {
      // Users can read their own orders, admins can read all
      allow read: if isAuthenticated() &&
                    (resource.data.userId == request.auth.uid || isAdmin());

      // Users can create their own orders
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;

      // Only admins can update orders (status, payment, etc.)
      allow update: if isAdmin();

      // Only admins can delete
      allow delete: if isAdmin();
    }

    // ============================================
    // APPOINTMENTS
    // ============================================

    match /appointments/{appointmentId} {
      // Users can read their own appointments, admins can read all
      allow read: if isAuthenticated() &&
                    (resource.data.userId == request.auth.uid || isAdmin());

      // Users can create their own appointments
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;

      // Users can update their own appointments, admins can update all
      allow update: if isAuthenticated() &&
                      (resource.data.userId == request.auth.uid || isAdmin());

      // Only admins can delete
      allow delete: if isAdmin();
    }

    // ============================================
    // BOOKINGS (Grooming, Daycare, Training)
    // ============================================

    match /bookings/{bookingId} {
      // Users can read their own bookings, admins can read all
      allow read: if isAuthenticated() &&
                    (resource.data.userId == request.auth.uid || isAdmin());

      // Users can create their own bookings
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;

      // Users can update their own bookings, admins can update all
      allow update: if isAuthenticated() &&
                      (resource.data.userId == request.auth.uid || isAdmin());

      // Only admins can delete
      allow delete: if isAdmin();
    }

    // ============================================
    // VACCINATIONS
    // ============================================

    match /vaccinations/{vaccinationId} {
      // Users can read their own vaccination records, admins can read all
      allow read: if isAuthenticated() &&
                    (resource.data.userId == request.auth.uid || isAdmin());

      // Users can create their own vaccination records
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;

      // Users can update their own records, admins can update all
      allow update: if isAuthenticated() &&
                      (resource.data.userId == request.auth.uid || isAdmin());

      // Users can delete their own records, admins can delete all
      allow delete: if isAuthenticated() &&
                      (resource.data.userId == request.auth.uid || isAdmin());
    }

    // ============================================
    // CONSULTATIONS
    // ============================================

    match /consultations/{consultationId} {
      // Users can read their own consultations, admins can read all
      allow read: if isAuthenticated() &&
                    (resource.data.userId == request.auth.uid || isAdmin());

      // Users can create consultation requests
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;

      // Only admins can update consultations (status, response, etc.)
      allow update: if isAdmin();

      // Only admins can delete
      allow delete: if isAdmin();
    }

    // ============================================
    // CONTACT SUBMISSIONS
    // ============================================

    match /contacts/{contactId} {
      // Only admins can read contact submissions
      allow read: if isAdmin();

      // Anyone can create a contact submission
      allow create: if true;

      // Only admins can update/delete
      allow update, delete: if isAdmin();
    }

    // ============================================
    // REVIEWS (for products/services)
    // ============================================

    match /reviews/{reviewId} {
      // Public read access
      allow read: if true;

      // Authenticated users can create reviews
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;

      // Users can update their own reviews, admins can update all
      allow update: if isAuthenticated() &&
                      (resource.data.userId == request.auth.uid || isAdmin());

      // Users can delete their own reviews, admins can delete all
      allow delete: if isAuthenticated() &&
                      (resource.data.userId == request.auth.uid || isAdmin());
    }

    // ============================================
    // DEFAULT DENY
    // ============================================

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
